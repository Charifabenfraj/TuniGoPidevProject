{% extends 'base.html.twig' %}

{% block title %}Détails du trajet de bus{% endblock %}

{% block body %}
<div class="admin-container">
    {% include 'admin/sidebar.html.twig' %} {# Inclusion de la sidebar #}

    <div class="main-content">
        <div class="page-header">
            <h1 class="page-title">Détails du trajet de bus</h1>
            <div class="page-actions">
                <a href="{{ path('app_bus_trajet_index') }}" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('app_bus_trajet_edit', {'id': bus_trajet.id}) }}" class="btn btn-outline-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                {{ include('bus_trajet/_delete_form.html.twig', { 'class': 'btn btn-outline-danger' }) }}
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Informations sur le trajet</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ bus_trajet.id }}</td>
                        </tr>
                        <tr>
                            <th>Station de départ</th>
                            <td>{{ bus_trajet.stationDepart }}</td>
                        </tr>
                        <tr>
                            <th>Station d'arrivée</th>
                            <td>{{ bus_trajet.stationArrivee }}</td>
                        </tr>
                        <tr>
                            <th>Heure de départ</th>
                            <td>{{ bus_trajet.heureDepart }}</td>
                        </tr>
                        <tr>
                            <th>Heure d'arrivée</th>
                            <td>{{ bus_trajet.heureArrivee }}</td>
                        </tr>
                        <tr>
                            <th>Numéro de bus</th>
                            <td>{{ bus_trajet.numeroBus }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
