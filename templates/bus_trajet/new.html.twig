{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau trajet de bus{% endblock %}

{% block body %}
<div class="admin-container">
    {% include 'admin/sidebar.html.twig' %}

    <div class="main-content">
        <div class="page-header">
            <h1>Créer un nouveau trajet bus</h1>
            <a href="{{ path('app_bus_trajet_index') }}" class="btn">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>

        {{ form_start(form, {'attr': {'id': 'busTrajetForm'}}) }}
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.stationDepart) }}
                    {{ form_widget(form.stationDepart, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.stationArrivee) }}
                    {{ form_widget(form.stationArrivee, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.heureDepart) }}
                    {{ form_widget(form.heureDepart, {'attr': {'type': 'time', 'class': 'form-control'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.heureArrivee) }}
                    {{ form_widget(form.heureArrivee, {'attr': {'type': 'time', 'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.bus) }}
                {{ form_widget(form.bus, {'attr': {'class': 'form-select'}}) }}
            </div>

            <button type="submit" class="btn btn-success">Créer</button>
        {{ form_end(form) }}

        <a href="{{ path('app_bus_trajet_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
    </div>
</div>
{% endblock %}
