{% extends 'base.html.twig' %}

{% block title %}Gestion des Trajets Bus - TuniGo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="{{ asset('styles/admin.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="admin-container">
    <!-- Sidebar -->
    {% include 'admin/sidebar.html.twig' %}

    <!-- Main Content -->
    <div class="main-content">
        <div class="page-header">
            <h1 class="page-title">Gestion des Trajets Bus</h1>
            <div class="page-actions">
                <a href="{{ path('app_bus_trajet_new') }}" class="btn-admin btn-primary-admin">
                    <i class="fas fa-plus"></i> Ajouter un trajet
                </a>
            </div>
        </div>
        
        <div class="card-admin">
            <div class="card-admin-header">
                <h5 class="card-admin-title">Liste des Trajets Bus</h5>
                <div>
                    <button class="btn-admin btn-outline-admin btn-sm-admin">
                        <i class="fas fa-filter"></i> Filtrer
                    </button>
                    <button class="btn-admin btn-outline-admin btn-sm-admin">
                        <i class="fas fa-download"></i> Exporter
                    </button>
                </div>
            </div>
            <div class="card-admin-body">
                <div class="table-responsive">
                    <table class="table-admin">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Station Départ</th>
                                <th>Station Arrivée</th>
                                <th>Heure Départ</th>
                                <th>Heure Arrivée</th>
                                <th>Numéro Bus</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for bus_trajet in bus_trajets %}
                            <tr>
                                <td>{{ bus_trajet.id }}</td>
                                <td>{{ bus_trajet.stationDepart }}</td>
                                <td>{{ bus_trajet.stationArrivee }}</td>
                                <td>{{ bus_trajet.heureDepart }}</td>
                                <td>{{ bus_trajet.heureArrivee }}</td>
                                <td>
                                    {% if bus_trajet.bus is not null %}
                                    {{ bus_trajet.bus.numeroBus }}
                                    {% else %}
                                        <span class="text-danger">Aucun bus</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_bus_trajet_show', {'id': bus_trajet.id}) }}" class="btn btn-outline-info">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('app_bus_trajet_edit', {'id': bus_trajet.id}) }}" class="btn btn-outline-warning">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <button class="btn-action btn-delete" title="Supprimer" 
                                           onclick="if(confirm('Êtes-vous sûr de vouloir supprimer ce trajet ?')) { 
                                               document.getElementById('delete-form-{{ bus_trajet.id }}').submit(); 
                                           }">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <form id="delete-form-{{ bus_trajet.id }}" action="{{ path('app_bus_trajet_delete', {'id': bus_trajet.id}) }}" method="post" style="display: none;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bus_trajet.id) }}">
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucun trajet trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Edit Bus Trajet -->
<div class="modal fade" id="editBusTrajetModal" tabindex="-1" aria-labelledby="editBusTrajetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editBusTrajetModalLabel">Modifier un Trajet Bus</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for editing a trajet -->
                <form id="edit-bus-trajets-form" action="{{ path('app_bus_trajet_edit', {'id': 0}) }}" method="post">
                    <div class="form-group">
                        <label for="stationDepart">Station Départ</label>
                        <input type="text" class="form-control" id="stationDepart" name="stationDepart" required>
                    </div>
                    <div class="form-group">
                        <label for="stationArrivee">Station Arrivée</label>
                        <input type="text" class="form-control" id="stationArrivee" name="stationArrivee" required>
                    </div>
                    <div class="form-group">
                        <label for="heureDepart">Heure Départ</label>
                        <input type="time" class="form-control" id="heureDepart" name="heureDepart" required>
                    </div>
                    <div class="form-group">
                        <label for="heureArrivee">Heure Arrivée</label>
                        <input type="time" class="form-control" id="heureArrivee" name="heureArrivee" required>
                    </div>
                    <div class="form-group">
                        <label for="numeroBus">Numéro Bus</label>
                        <input type="text" class="form-control" id="numeroBus" name="numeroBus" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Sauvegarder</button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var editModal = document.getElementById('editBusTrajetModal');
            editModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var id = button.getAttribute('data-id');
                var depart = button.getAttribute('data-depart');
                var arrivee = button.getAttribute('data-arrivee');
                var heureDepart = button.getAttribute('data-heure-depart');
                var heureArrivee = button.getAttribute('data-heure-arrivee');
                var numero = button.getAttribute('data-numero');
                
                var modalForm = editModal.querySelector('form');
                modalForm.setAttribute('action', '/bus/trajet/' + id + '/edit');
                modalForm.querySelector('#stationDepart').value = depart;
                modalForm.querySelector('#stationArrivee').value = arrivee;
                modalForm.querySelector('#heureDepart').value = heureDepart;
                modalForm.querySelector('#heureArrivee').value = heureArrivee;
                modalForm.querySelector('#numeroBus').value = numero;
            });
        });
    </script>
{% endblock %}