{% extends 'base.html.twig' %}

{% block title %}Détails Trajet Train - TuniGo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="{{ asset('styles/admin.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="admin-container">
    {% include 'admin/sidebar.html.twig' %}

    <div class="main-content">
        <div class="page-header">
            <h1 class="page-title">Détails du trajet</h1>
            <div class="page-actions">
                <a href="{{ path('app_train_trajet_index') }}" class="btn-admin btn-outline-admin">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </div>

        <div class="card-admin">
            <div class="card-admin-body">
                <table class="table-details">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ train_trajet.id }}</td>
                        </tr>
                        <tr>
                            <th>Gare Départ</th>
                            <td>{{ train_trajet.gareDepart }}</td>
                        </tr>
                        <tr>
                            <th>Gare Arrivée</th>
                            <td>{{ train_trajet.gareArrivee }}</td>
                        </tr>
                        <tr>
                            <th>Heure Départ</th>
                            <td>{{ train_trajet.heureDepart }}</td>
                        </tr>
                        <tr>
                            <th>Heure Arrivée</th>
                            <td>{{ train_trajet.heureArrivee }}</td>
                        </tr>
                        <tr>
                            <th>Numéro Train</th>
                            <td>{{ train_trajet.train.numeroTrain }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="action-buttons mt-4">
                    <a href="{{ path('app_train_trajet_edit', {'id': train_trajet.id}) }}" 
                       class="btn-admin btn-primary-admin">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    
                    {{ include('train_trajet/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}