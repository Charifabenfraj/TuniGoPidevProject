{% extends 'base.html.twig' %}

{% block title %}Gestion des Trajets Train - TuniGo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="{{ asset('styles/admin.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="admin-container">
    {% include 'admin/sidebar.html.twig' %}

    <div class="main-content">
        <div class="page-header">
            <h1 class="page-title">Gestion des Trajets Train</h1>
            <div class="page-actions">
                <a href="{{ path('app_train_trajet_new') }}" class="btn-admin btn-primary-admin">
                    <i class="fas fa-plus"></i> Ajouter un trajet
                </a>
            </div>
        </div>
        
        <div class="card-admin">
            <div class="card-admin-header">
                <h5 class="card-admin-title">Liste des trajets</h5>
                <div>
                    <button class="btn-admin btn-outline-admin btn-sm-admin">
                        <i class="fas fa-filter"></i> Filtrer
                    </button>
                    <button class="btn-admin btn-outline-admin btn-sm-admin">
                        <i class="fas fa-download"></i> Exporter
                    </button>
                </div>
            </div>
            <div class="card-admin-body">
                <div class="table-responsive">
                    <table class="table-admin">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Gare Départ</th>
                                <th>Gare Arrivée</th>
                                <th>Heure Départ</th>
                                <th>Heure Arrivée</th>
                                <th>Numéro Train</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for train_trajet in train_trajets %}
                            <tr>
                                <td>{{ train_trajet.id }}</td>
                                <td>{{ train_trajet.gareDepart }}</td>
                                <td>{{ train_trajet.gareArrivee }}</td>
                                <td>{{ train_trajet.heureDepart }}</td>
                                <td>{{ train_trajet.heureArrivee }}</td>
                                <td>{{ train_trajet.numeroTrain }}</td>
                                <td>
                                    <a href="{{ path('app_train_trajet_show', {'id': train_trajet.id}) }}" 
                                       class="btn-action btn-view" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_train_trajet_edit', {'id': train_trajet.id}) }}" 
                                       class="btn-action btn-edit" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn-action btn-delete" title="Supprimer" 
                                           onclick="if(confirm('Supprimer ce trajet ?')) { 
                                               document.getElementById('delete-form-{{ train_trajet.id }}').submit(); 
                                           }">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <form id="delete-form-{{ train_trajet.id }}" 
                                          action="{{ path('app_train_trajet_delete', {'id': train_trajet.id}) }}" 
                                          method="post" 
                                          style="display: none;">
                                        <input type="hidden" name="_token" 
                                               value="{{ csrf_token('delete' ~ train_trajet.id) }}">
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucun trajet trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}