{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle réclamation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Définition des couleurs personnalisées */
        :root {
            --primary-color: #B22222; /* Rouge foncé */
            --primary-color-dark: #8B0000; /* Rouge plus foncé */
            --primary-color-light: #cd5c5c; /* Rouge clair */
            --primary-color-lighter: rgba(178, 34, 34, 0.05);
            --gray-100: #f8f9fa;
            --gray-200: #e9ecef;
            --gray-300: #dee2e6;
            --gray-400: #ced4da;
            --gray-500: #adb5bd;
            --gray-600: #6c757d;
            --gray-700: #495057;
            --gray-800: #343a40;
            --gray-900: #212529;
            --transition-speed: 0.3s;
            --box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
            --input-shadow: 0 2px 5px rgba(0, 0, 0, 0.06);
        }

        /* Disposition en deux colonnes */
        .row {
            display: flex;
            justify-content: space-between;
            height: 100vh; /* Hauteur de la page */
        }

        .left-column {
            background: linear-gradient(to right, var(--primary-color), var(--primary-color-dark));
            color: white;
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .right-column {
            flex: 1;
            background-color: var(--gray-100);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Formulaire flottant */
        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-control {
            border-radius: 0.375rem;
            border: 2px solid #6c757d;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(178, 34, 34, 0.25);
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: var(--primary-color-dark);
            border-color: var(--primary-color-dark);
        }

        .card-header {
            background-color: var(--primary-color);
            color: white;
        }

        .card-body {
            background: white;
            border-radius: 15px;
            padding: 30px;
            width: 100%;
        }

        /* Utilisation des labels flottants */
        .form-floating > label {
            font-size: 1rem;
            color: #6c757d;
        }

        .form-floating > .form-control:focus ~ label {
            color: var(--primary-color);
        }

        /* Lien de retour */
        .btn-outline-primary {
            color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-outline-primary:hover {
            background-color: var(--primary-color-light);
            color: white;
            border-color: var(--primary-color);
        }

        /* Colonne gauche */
.left-column {
    background: linear-gradient(135deg, rgba(178, 34, 34, 1) 0%, rgba(139, 0, 0, 1) 100%); /* Dégradé de rouge */
    padding: 50px 20px;
    height: 100vh; /* Prend toute la hauteur de la fenêtre */
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    border-radius: 15px; /* Arrondir les bords */
    box-shadow: var(--box-shadow); /* Ombre douce */
}

/* Titres et paragraphes */
.left-column h1 {
    font-size: 3.5rem; /* Taille du titre */
    font-weight: bold;
    margin-bottom: 20px; /* Espacement sous le titre */
    text-transform: uppercase;
}

.left-column p {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 20px; /* Espacement entre les paragraphes */
}

/* Bouton - Optionnel, si tu veux un appel à l'action */
.left-column .btn-action {
    margin-top: 30px;
    background-color: var(--primary-color);
    color: white;
    border-radius: 30px;
    padding: 12px 30px;
    font-size: 1.2rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: background-color 0.3s ease;
}

.left-column .btn-action:hover {
    background-color: var(--primary-color-dark);
    cursor: pointer;
}

    </style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Colonne gauche : Fond rouge avec dégradé -->
<!-- Colonne gauche : Fond rouge avec dégradé -->
<div class="left-column text-center">
    <h1 class="display-3 text-white mb-4">Laissez-nous votre réclamation</h1>
    <p class="text-white mb-4">Votre satisfaction est notre priorité. Faites-nous part de vos demandes, et nous nous ferons un plaisir de vous aider.</p>
</div>


        <!-- Colonne droite : Formulaire -->
        <div class="right-column">
            <div class="card" style="width: 100%; max-width: 600px;">
                <div class="card-header  text-white">
                    <h3>Réclamation</h3>
                </div>
                <div class="card-body">
                    <!-- Formulaire -->
                    {{ form_start(form) }}
                        <div class="form-floating mb-3">
                            {{ form_widget(form.nom_utilisateur, {'attr': {'class': 'form-control'}}) }}
                            <label for="nom_utilisateur">Nom de l'utilisateur</label>
                            {{ form_errors(form.nom_utilisateur) }}
                        </div>

                        <div class="form-floating mb-3">
                            {{ form_widget(form.prenom_utilisateur, {'attr': {'class': 'form-control'}}) }}
                            <label for="prenom_utilisateur">Prénom de l'utilisateur</label>
                            {{ form_errors(form.prenom_utilisateur) }}
                        </div>
                        
                        <div class="form-floating mb-3">
                            {{ form_widget(form.typeReclamation, {'attr': {'class': 'form-control'}}) }}
                            <label for="typeReclamation">Type de réclamation</label>
                            {{ form_errors(form.typeReclamation) }}
                        </div>
                        
                        <div class="form-floating mb-3">
                            {{ form_widget(form.descriptionReclamation, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                            <label for="descriptionReclamation">Description de la réclamation</label>
                            {{ form_errors(form.descriptionReclamation) }}
                        </div>

                       
                        <div class="mb-3">
                            {{ form_label(form.image, 'Image (facultatif)', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.image) }}
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Soumettre la réclamation</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

  
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
