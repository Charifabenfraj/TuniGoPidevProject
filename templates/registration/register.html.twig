{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f8f9fa;
        }
        .register-container {
            max-width: 600px;
            margin: 30px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            width: 100%;
            padding: 10px;
            margin-top: 10px;
        }
        .form-label {
            font-weight: 500;
        }
        .login-link {
            text-align: center;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="register-container">
        <h1 class="text-center mb-4">Créer un compte</h1>

        {{ form_start(registrationForm) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(registrationForm.nomUtilisateur) }}
                        {{ form_widget(registrationForm.nomUtilisateur) }}
                        {{ form_errors(registrationForm.nomUtilisateur) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(registrationForm.prenomUtilisateur) }}
                        {{ form_widget(registrationForm.prenomUtilisateur) }}
                        {{ form_errors(registrationForm.prenomUtilisateur) }}
                    </div>
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.emailUtilisateur) }}
                {{ form_widget(registrationForm.emailUtilisateur) }}
                {{ form_errors(registrationForm.emailUtilisateur) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.numeroTelephoneUtilisateur) }}
                {{ form_widget(registrationForm.numeroTelephoneUtilisateur) }}
                {{ form_errors(registrationForm.numeroTelephoneUtilisateur) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.questionSecurite) }}
                {{ form_widget(registrationForm.questionSecurite) }}
                {{ form_errors(registrationForm.questionSecurite) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.reponseSecurite) }}
                {{ form_widget(registrationForm.reponseSecurite) }}
                {{ form_errors(registrationForm.reponseSecurite) }}
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword.first) }}
                        {{ form_widget(registrationForm.plainPassword.first) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword.second) }}
                        {{ form_widget(registrationForm.plainPassword.second) }}
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms) }}
                </div>
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}

        <div class="login-link">
            <p>Déjà inscrit ? <a href="{{ path('app_login') }}">Se connecter</a></p>
        </div>
    </div>
</div>
{% endblock %} 