{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

    {% for field in form %}
        {% if field.vars.name != '_token' %}
            <div class="mb-3">
                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(field) }}
            </div>
        {% endif %}
    {% endfor %}

    <button class="btn btn-primary rounded-3 px-4 py-2 mt-2">
        {{ button_label|default('Save') }}
    </button>

{{ form_end(form) }}
<style>
form .form-control {
    font-size: 16px;
    padding: 12px 16px;
    border: 1px solid #ced4da;
    border-radius: 8px;
    background-color: #fff;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

form .form-control:focus {
    border-color: rgb(158, 0, 0);
    box-shadow: 0 0 0 0.2rem rgba(158, 0, 0, 0.25);
    outline: none;
}

form .form-label {
    font-weight: 600;
    margin-bottom: 6px;
    color: #333;
}

form .form-error {
    color: #d9534f;
    font-size: 0.9rem;
    margin-top: 4px;
}

form .btn {
    font-size: 16px;
    font-weight: 600;
    border-radius: 8px;
    transition: background-color 0.3s ease;
}

form .btn-primary {
    background-color: rgb(213, 20, 20);
    border-color: rgb(247, 247, 247);
    color: white;
}

form .btn-primary:hover {
    background-color: rgb(191, 57, 57);
    border-color: rgb(250, 250, 250);
}
</style>
