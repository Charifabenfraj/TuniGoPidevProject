{% extends 'base.html.twig' %}

{% block title %}Reservation List{% endblock %}

{% block body %}
    {% include 'admin/sidebar.html.twig' %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-xl-7">

                <div class="card border-0 shadow rounded-4">
                    <div class="card-header text-white p-4" style="background: linear-gradient(135deg, rgb(119, 3, 3), rgb(151, 19, 19)); border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="mb-0 d-flex align-items-center gap-2">
                                <i class="bi bi-calendar-check"></i> Reservation List
                            </h3>
                            <a href="{{ path('app_reservation_parking_new') }}" class="btn btn-light text-dark rounded-pill">
                                <i class="bi bi-plus-circle"></i> Add
                            </a>
                        </div>
                    </div>

                    <div class="card-body px-4 py-4">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="bi bi-hash text-secondary"></i></th>
                                    <th><i class="bi bi-calendar-event text-primary"></i> Date</th>
                                    <th><i class="bi bi-person text-success"></i> User</th>
                                    <th><i class="bi bi-building text-warning"></i> Parking</th>
                                    <th><i class="bi bi-gear text-muted"></i> Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reservation in pagination %}
                                    <tr>
                                        <td>{{ reservation.idReservation }}</td>
                                        <td>{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d H:i') : '' }}</td>
                                        <td>
                                            {{ reservation.utilisateur.nomUtilisateur}}
                                        </td>
                                        <td>
                                            {{ reservation.parking.nomParking }}
                                        </td>
                                        <td>
                                            <a href="{{ path('app_reservation_parking_show', {'idReservation': reservation.idReservation}) }}"
                                               class="btn btn-sm btn-outline-primary me-1">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            <a href="{{ path('app_reservation_parking_edit', {'idReservation': reservation.idReservation}) }}"
                                               class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No reservations found.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                        <div class="d-flex justify-content-center mt-4">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
