{% extends 'base.html.twig' %}

{% block title %}Réservation - Détails{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="{{ asset('styles/admin.css') }}" rel="stylesheet">
<style>
.btn-admin.btn-secondary-admin {
    background-color:rgb(39, 32, 32); /* Couleur de fond */
    color: white;              /* Couleur du texte */
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    font-weight: 500;
    font-size: 14px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: inline-flex;
    align-items: center;
    text-decoration: none;
}

.btn-admin.btn-secondary-admin i {
    margin-right: 8px;
    transition: transform 0.3s ease;
}

.btn-admin.btn-secondary-admin:hover {
    background-color:rgb(56, 0, 0); /* Couleur foncée au survol */
    transform: scale(1.02);
}

.btn-admin.btn-secondary-admin:hover i {
    transform: translateX(-5px);
}
</style>

{% endblock %}

{% block body %}
<div class="admin-container">
    <!-- Sidebar -->
    {% include 'admin/sidebar.html.twig' %}

    <!-- Main Content -->
    <div class="main-content">
        <div class="page-header">
            <h1 class="page-title">Détails de la Réservation</h1>
            <div class="page-actions">
                <a href="{{ path('app_reservation_index') }}" class="btn-admin btn-secondary-admin">
                    <i class="fas fa-arrow-left"></i> Retour 
                </a>
                
            </div>
        </div>

        <!-- Reservation Details -->
        <div class="table-container">
            <table class="table">
                <tbody>
                    <tr>
                        <th>ID Réservation</th>
                        <td>{{ reservation.idRes }}</td>
                    </tr>
                    <tr>
                        <th>Nom Utilisateur</th>
                        <td>{{ reservation.nomUser }}</td>
                    </tr>
                    <tr>
                        <th>Moyen</th>
                        <td>{{ reservation.moyen }}</td>
                    </tr>
                    <tr>
                        <th>Date Réservation</th>
                        <td>{{ reservation.dateRes ? reservation.dateRes|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Moyen de Paiement</th>
                        <td>{{ reservation.moyenPaiement }}</td>
                    </tr>
                    <tr>
                        <th>Code de Confirmation</th>
                        <td>{{ reservation.confirmationCode }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Delete Form -->
        <div class="delete-container">
            {{ include('reservation/_delete_form.html.twig') }}
        </div>
        <a href="{{ path('app_reservation_edit', {'idRes': reservation.idRes}) }}" class="btn-admin btn-primary-admin">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <div class="pdf-qr-container" style="margin-top: 30px;">

    {# <img src="{{ qrCodeBase64 }}" alt="QR Code" style="width: 150px; height: 150px; margin-bottom: 20px;"> #}

    <button onclick="window.print()" class="btn-admin btn-secondary-admin">
        <i class="fas fa-print"></i> Imprimer / Enregistrer PDF
    </button>
</div>

    </div>
   
</div>
{% endblock %}
