{% extends 'base.html.twig' %}

{% block title %}Parking List{% endblock %}

{% block body %}
    {% include 'admin/sidebar.html.twig' %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-xl-10">

                <div class="card border-0 shadow rounded-4">
                    <div class="card-header text-white p-4" style="background: linear-gradient(135deg,rgb(119, 3, 3),rgb(151, 19, 19)); border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="mb-0 d-flex align-items-center gap-2">
                                <i class="bi bi-building"></i> Parking List
                            </h3>
                            <a href="{{ path('app_parking_new') }}" class="btn btn-light text-dark rounded-pill">
                                <i class="bi bi-plus-circle"></i> Add
                            </a>
                        </div>
                    </div>

                    <div class="card-body px-4 py-4">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="bi bi-hash text-secondary"></i></th>
                                    <th><i class="bi bi-signpost-2 text-danger"></i> Name</th>
                                    <th><i class="bi bi-geo-alt text-success"></i> Location</th>
                                    <th><i class="bi bi-people text-info"></i> Capacity</th>
                                    <th><i class="bi bi-gear text-muted"></i> Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for parking in parkings %}
                                    <tr>
                                        <td>{{ parking.idParking }}</td>
                                        <td>{{ parking.nomParking }}</td>
                                        <td>{{ parking.localisationParking }}</td>
                                        <td>
                                            <span class="badge bg-info-subtle text-dark px-3 py-2">
                                                {{ parking.place }} places
                                            </span>
                                        </td>
                                        <td>
                                            <a href="{{ path('app_parking_show', {'idParking': parking.idParking}) }}"
                                               class="btn btn-sm btn-outline-primary me-1">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            <a href="{{ path('app_parking_edit', {'idParking': parking.idParking}) }}"
                                               class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No parking records found.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                        <div class="d-flex justify-content-center mt-4">
{% if max_pages > 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {# Bouton Précédent #}
            <li class="page-item {{ current_page == 1 ? 'disabled' : '' }}">
                <a class="page-link" 
                   href="{{ path('app_parking_index', {'page': current_page - 1}) }}" 
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            {# Numéros de page #}
            {% for i in 1..max_pages %}
                <li class="page-item {{ current_page == i ? 'active' : '' }}">
                    <a class="page-link" 
                       href="{{ path('app_parking_index', {'page': i}) }}">{{ i }}</a>
                </li>
            {% endfor %}

            {# Bouton Suivant #}
            <li class="page-item {{ current_page == max_pages ? 'disabled' : '' }}">
                <a class="page-link" 
                   href="{{ path('app_parking_index', {'page': current_page + 1}) }}" 
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>

    <div class="text-center text-muted mt-2">
        Showing {{ parkings|length }} of {{ total_items }} entries
    </div>
{% endif %}                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
