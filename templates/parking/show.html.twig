{% extends 'base.html.twig' %}

{% block title %}Parking Details{% endblock %}

{% block body %}
    {% include 'admin/sidebar.html.twig' %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-10">

                <div class="card border-0 shadow rounded-4">
                    <div class="card-header text-white p-4" style="background: linear-gradient(135deg,rgb(119, 3, 3),rgb(151, 19, 19)); border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                        <h3 class="mb-0 d-flex align-items-center gap-2">
                            <i class="bi bi-building"></i> Parking Information
                        </h3>
                    </div>

                    <div class="card-body px-5 py-4">

                        <div class="mb-4">
                            <h6 class="text-muted"><i class="bi bi-hash text-secondary"></i> ID</h6>
                            <p class="fs-5 fw-semibold">{{ parking.idParking }}</p>
                        </div>

                        <div class="mb-4">
                            <h6 class="text-muted"><i class="bi bi-signpost-2 text-danger"></i> Name</h6>
                            <p class="fs-5 fw-semibold">{{ parking.nomParking }}</p>
                        </div>

                        <div class="mb-4">
                            <h6 class="text-muted"><i class="bi bi-geo-alt text-success"></i> Location</h6>
                            <p class="fs-5 fw-semibold">{{ parking.localisationParking }}</p>
                        </div>

                        <div>
                            <h6 class="text-muted"><i class="bi bi-people text-info"></i> Capacity</h6>
                            <span class="badge bg-info-subtle text-dark fs-6 px-3 py-2">
                                {{ parking.place }} places
                            </span>
                        </div>

                    </div>

                    <div class="mt-5">
    <h5 class="text-muted mb-3">
      <div> </div>  <i class="bi bi-calendar-check text-primary"></i> Reservations
    </h5>

    {% if reservations is not empty %}
        <ul class="list-group list-group-flush">
            {% for reservation in reservations %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>
                        <strong>#{{ reservation.idReservation }}</strong> â€“
                        {{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d H:i') : 'No date' }}
                    </span>
                    <a href="{{ path('app_reservation_parking_show', {idReservation: reservation.idReservation}) }}"
                       class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-eye-fill"></i> View
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-muted">No reservations found for this parking.</p>
    {% endif %}
</div>



                    <div class="card-footer d-flex justify-content-between align-items-center bg-light px-4 py-3 rounded-bottom">
                        <a href="{{ path('app_parking_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to list
                        </a>
                        <div>
                            <a href="{{ path('app_parking_edit', {'idParking': parking.idParking}) }}" class="btn btn-outline-primary me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            {{ include('parking/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
