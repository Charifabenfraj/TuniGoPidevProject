{% extends 'base.html.twig' %}

{% block title %}Détails Trajet Métro - TuniGo{% endblock %}

{% block body %}
<div class="admin-container">
    {% include 'admin/sidebar.html.twig' %}

    <div class="main-content">
        <div class="page-header">
            <h1 class="page-title">Détails du trajet</h1>
            <div class="page-actions">
                <a href="{{ path('app_metro_trajet_index') }}" class="btn-admin btn-outline-admin">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </div>

        <div class="card-admin">
            <div class="card-admin-body">
                <table class="table-details">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ metro_trajet.id }}</td>
                        </tr>
                        <tr>
                            <th>Gare Départ</th>
                            <td>{{ metro_trajet.gareDepart }}</td>
                        </tr>
                        <tr>
                            <th>Gare Arrivée</th>
                            <td>{{ metro_trajet.gareArrivee }}</td>
                        </tr>
                        <tr>
                            <th>Heure Départ</th>
                            <td>{{ metro_trajet.heureDepart|date('H:i') }}</td>
                        </tr>
                        <tr>
                            <th>Heure Arrivée</th>
                            <td>{{ metro_trajet.heureArrivee|date('H:i') }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="action-buttons mt-4">
                    <a href="{{ path('app_metro_trajet_edit', {'id': metro_trajet.id}) }}" 
                       class="btn-admin btn-primary-admin">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    
                    {{ include('metro_trajet/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}