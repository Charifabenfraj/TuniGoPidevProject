{# templates/metro_trajet/_form.html.twig #}

<div class="card-admin">
    <div class="card-admin-body">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.gareDepart) }}
                {{ form_widget(form.gareDepart, {
                    'attr': {
                        'class': 'form-control' ~ (form.gareDepart.vars.errors ? ' is-invalid' : ''),
                        'placeholder': 'Saisir la gare de départ'
                    }
                }) }}
                {% if form.gareDepart.vars.errors %}
                    <div class="invalid-feedback">
                        {% for error in form.gareDepart.vars.errors %}
                            <span class="text-danger">{{ error.message }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(form.gareArrivee) }}
                {{ form_widget(form.gareArrivee, {
                    'attr': {
                        'class': 'form-control' ~ (form.gareArrivee.vars.errors ? ' is-invalid' : ''),
                        'placeholder': 'Saisir la gare d\'arrivée'
                    }
                }) }}
                {% if form.gareArrivee.vars.errors %}
                    <div class="invalid-feedback">
                        {% for error in form.gareArrivee.vars.errors %}
                            <span class="text-danger">{{ error.message }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.heureDepart) }}
                        {{ form_widget(form.heureDepart, {
                            'attr': {
                                'class': 'form-control' ~ (form.heureDepart.vars.errors ? ' is-invalid' : '')
                            }
                        }) }}
                        {% if form.heureDepart.vars.errors %}
                            <div class="invalid-feedback">
                                {% for error in form.heureDepart.vars.errors %}
                                    <span class="text-danger">{{ error.message }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.heureArrivee) }}
                        {{ form_widget(form.heureArrivee, {
                            'attr': {
                                'class': 'form-control' ~ (form.heureArrivee.vars.errors ? ' is-invalid' : '')
                            }
                        }) }}
                        {% if form.heureArrivee.vars.errors %}
                            <div class="invalid-feedback">
                                {% for error in form.heureArrivee.vars.errors %}
                                    <span class="text-danger">{{ error.message }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="form-footer mt-4">
                <button class="btn-admin btn-primary-admin">
                    <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
                </button>
                <a href="{{ path('app_metro_trajet_index') }}" class="btn-admin btn-outline-admin">
                    Annuler
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>